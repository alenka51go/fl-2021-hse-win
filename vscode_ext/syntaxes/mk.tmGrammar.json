{
  "scopeName": "source.abc",
  "patterns": [{ "include": "#expression" }],
  "repository": {
    "expression": {
      "patterns": [{ "include": "#kw" }, { "include": "#integer_numbers" }, { "include": "#floating_point_literals"}, { "include": "#constants"} ]
    },
    "kw": {
      "match": "\\b(auto|break|case|switch|try|catch|const|mutable|decltype|default|delete|do|if|else|while|explicit|for|friend|namespace|typedef)\\b",
      "name": "keyword.control"
    },
  
    "integer_literals": {
      "match": "\\b([0-9]* | 0[0-7]*)\\b",
      "name": "constant.numeric"
    },
    
    "floating_point_literals": {
      "match": "\\b([0-9]*.{0,1}[0-9]*)\\b",
      "name": "constant.numeric"
    },

    "constants": {
      "match": "\\b(true|false|nil|YES|NO)\\b",
      "name": "constant.language"
    },

    "comments": {
      "match": "\\b(//$)\\b",
      "name": "comment.line.double-slash"
    }
  }
}